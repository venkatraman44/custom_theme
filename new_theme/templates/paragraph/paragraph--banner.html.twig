<div class="specbee-hero__wrapper">
	<div class="specbee-hero__container">
		<div class="specbee-hero__container-2">
			<div class="specbee-hero__title">
<h1>{{ content.field_billboar_title[0]['#text'] }}</h1>
			</div>
			<div class="specbee-hero__desc">
				{{ content.field_banner_ }}
			</div>
			<div class="specbee-hero--link">
<a href="{{ content.field_banner_link[0]['#url'] }}">{{ content.field_banner_link[0]['#title'] }}</a>
			</div>
			<div class="specbee-hero__img">
				{{ content.field_banner_img }}
			</div>
{{ content.field_colored_parag }}
		</div>
	</div>
</div>
</div>


